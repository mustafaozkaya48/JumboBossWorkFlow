@model _DbEntities.Models.EditProfileViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/WorkFlow/Views/Shared/_LayoutPagePanel.cshtml";
}

@using (Html.BeginForm("Profile","Panel",Model,FormMethod.Post, new { enctype = "multipart/form-data" }))
{
 <hr>
<div class="row">
    <!-- left column -->
    <div class="col-md-3">
        <div class="text-center">
            <img src="~/Content/images/@Model.ProfilPicture" class="img-circle" alt="User Image" height="150" width="150" />
            <h6>Farklı bir fotoğraf yükle ...</h6>
            <input type="file" name="ProfilPictures" id="ProfilPictures" class="form-control" />
          
        </div>
    </div>

    <!-- edit form column -->
    <div class="col-md-9 personal-info">
        @if (ViewBag.result != null)
        {
            <div class="alert alert-success alert-dismissable">
                <a class="panel-close close" data-dismiss="alert">×</a>
                <i class="fa fa-save"></i>
                Prfil Bilgileriniz  <strong>Kaydedilmiştir.</strong>
            </div>
        }

        <h3>Profil Bilgileri</h3>

        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-lg-3 control-label">Ad</label>
                <div class="col-lg-8">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Adınızı giriniz", type = "text" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Soyad</label>
                <div class="col-lg-8">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(model => model.SurName, new { @class = "form-control", placeholder = "Soyadınızı giriniz", type = "text"  })
                    @Html.ValidationMessageFor(model => model.SurName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">E-Posta</label>
                <div class="col-lg-8">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-Posta giriniz", type = "text", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Telefon Numarası</label>
                <div class="col-lg-8">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @id = "phone", name = "phone", placeholder = "Numara giriniz", type = "text" })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Şiket Adı</label>
                <div class="col-lg-8">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.CompanyInfo, new { @class = "form-control", placeholder = "Şirket Adı", type = "text" })
                    @Html.ValidationMessageFor(model => model.CompanyInfo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Hakkımda</label>
                <div class="col-lg-8">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextAreaFor(model => model.About, new { @class = "form-control", placeholder = "Bize Kendinizi anlatın", type = "text" })
                    @Html.ValidationMessageFor(model => model.About, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Adres</label>
                <div class="col-lg-8">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextAreaFor(model => model.Address, new { @class = "form-control", placeholder = "Adres giriniz", type = "text" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Şifre</label>
                <div class="col-lg-8">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.CurrentPassword, new { @class = "form-control", placeholder = "Şifre giriniz", type = "text" })
                    @Html.ValidationMessageFor(model => model.CurrentPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Yeni Şifre</label>
                <div class="col-lg-8">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifre giriniz", type = "text" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Yeni Şifre Tekrar</label>
                <div class="col-lg-8">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Şifre Tekrar giriniz", type = "text" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-8">

                    <input class="btn btn-primary" type="submit" value="Kaydet">




                    <span></span>

                    <a href="~/WorkFlow/Panel/Home" class="btn btn-default">Vazgeç</a>
                </div>
            </div>
        </form>
    </div>
</div>

<hr>
}