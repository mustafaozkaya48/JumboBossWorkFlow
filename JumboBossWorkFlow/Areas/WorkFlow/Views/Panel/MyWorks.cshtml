@model List<_DbEntities.Models.Work>
@using _DbEntities.Repository.Concrete
@using _DbEntities.Models
@{
    ViewBag.Title = "MyWorks";
    Layout = "~/Areas/WorkFlow/Views/Shared/_LayoutPagePanel.cshtml";
    WorkAdditionRepository rp = new WorkAdditionRepository();

}

<div class="panel-body" style="margin:0 10px 0 10px">
    <div class="row">
        <div>
            <div class="mail-box">
                <aside class="lg-side">
                    <div class="inbox-head">

                        <form action="#" class="pull-right position">
                            <div class="input-append">
                                <input type="text" id="ara" class="sr-input" placeholder="Ara ">
                            </div>
                        </form>
                    </div>

                    <a class="btn btn-success pull-right btn-lg" style="margin-top:20px;" href="~/WorkFlow/Panel/AddBusiness"><i class="glyphicon glyphicon-plus"></i> Bir İş Ekle</a>
                    <div class="inbox-body">
                        <table class="table table-inbox table-hover table-responsive" style="overflow-x:auto;" id="table">
                            <thead>
                                <tr class="unread">
                                    <th class="col-sm-2 view-message  dont-show">Bitiş Tarihi</th>
                                    <th class="view-message col-sm-3">İşin Konusu</th>
                                    <th></th>
                                    <th></th>
                                    <th class="col-sm-2">
                                        <span>
                                            Talep Eden
                                            <div>
                                                <span class="label label-success pull-left"> </span>
                                                <span class="label label-info pull-left"> </span>
                                                <span class="label label-warning pull-left"> </span>
                                                <span class="label label-danger pull-left"> </span>
                                            </div>
                                        </span>
                                    </th>
                                    <th class="col-sm-2">
                                        <span>
                                            Görevli
                                            <div>
                                                <span class="label label-success pull-left"> </span>
                                                <span class="label label-info pull-left"> </span>
                                                <span class="label label-warning pull-left"> </span>
                                                <span class="label label-danger pull-left"> </span>
                                            </div>
                                        </span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr data-toggle="modal" data-target="#work_view_@item.Id">
                                        <td class="view-message  dont-show"><h5>@item.WorkDateTime.ToLongDateString() @item.WorkDateTime.ToShortTimeString() </h5></td>
                                        <td colspan="3" class="view-message"><h5>@item.WorkTitle</h5></td>
                                        <td><h4 style="margin-top: 5px;"><span class="label label-info ">@item.RequestingUser.userInfo.Name @item.RequestingUser.userInfo.SurName</span></h4></td>

                                        <td><h4 style="margin-top: 5px;"><span class="label label-success ">@item.EmployeeUser.userInfo.Name @item.EmployeeUser.userInfo.SurName</span></h4></td>
                                        <td>
                                            <span class="btn-group pull-right" style="margin-top: 5px">
                                                <button class="btn btn-warning btn-sm" data-toggle="modal" data-target="#work_view_@item.Id"><i class="glyphicon glyphicon-edit"></i></button>
                                                <button class="btn btn-danger btn-xs" data-toggle="modal" data-target="#work_view"><i class="glyphicon glyphicon-remove"></i></button>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>

                                        <div class="modal fade work_view" id="work_view_@item.Id">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <a href="#" data-dismiss="modal" class="class pull-right"><span class="glyphicon glyphicon-remove"></span></a>
                                                        <h3 class="modal-title text-center">@item.WorkTitle</h3>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-md-12 product_content">
                                                                <div class="row">
                                                                    <div class="col-md-6">
                                                                        <h4 class="text-bold"><span class="glyphicon glyphicon-time"></span> Planan Zaman</h4>
                                                                        <h4>@item.WorkDateTime.ToLongDateString() @item.WorkDateTime.ToShortTimeString()</h4>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <h4 class="text-bold"><span class="glyphicon glyphicon-time"></span> Oluşturlma Zamanı</h4>
                                                                        <h4>@item.CreateDateTime.ToLongDateString() @item.CreateDateTime.ToShortTimeString()</h4>
                                                                    </div>
                                                                </div>
                                                                <hr />

                                                                <div class="form-group">
                                                                    <h4 class="text-bold"><span class="glyphicon glyphicon-info-sign"></span> İş Açıklaması</h4>
                                                                    <h3>@item.WorkDescription</h3>
                                                                </div>
                                                                <hr />
                                                                <div class="form-group">
                                                                    <h4 class="text-bold"><span class="glyphicon glyphicon-user"></span> Talep Eden Kişi</h4>
                                                                    <h3>@item.RequestingUser.userInfo.Name @item.RequestingUser.userInfo.SurName </h3>
                                                                </div>
                                                                <div class="form-group">
                                                                    <h4 class="text-bold"><span class="glyphicon glyphicon-folder-open"></span>  Ek Dosyalar</h4>
                                                                    @foreach (var additionitem in rp.GetWorkAdditions(item.Id))
                                                                    {
                                                                    <h4><span class="glyphicon glyphicon-arrow-down"></span><a  href="~/Panel/DownloadFile/@additionitem.Id" target="_blank"> @additionitem.Filename</a></h4>
                                                                    
                                                                    }
                                                                </div>
                                                                <div class="space-ten"></div>
                                                                <div class="btn-ground">
                                                                    <button type="button" class="btn btn-primary btn-lg pull-right" data-dismiss="modal"><i class="fa fa-times-circle"></i> Kapat</button>
                                                                </div>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                    </tr>





                                }



                            </tbody>
                        </table>

                    </div>
             
                </aside>
            </div>
        </div>

    </div>
</div>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<style>
    .work_view .modal-dialog {
        max-width: 800px;
        width: 100%;
    }

    .pre-cost {
        text-decoration: line-through;
        color: #a5a5a5;
    }

    .space-ten {
        padding: 10px 0;
    }
</style>
<script>

    function myFunction(x) {
        $("#item_view").modal();
    };

</script>
<script>
    //Tabloda ara
    $(document).ready(function () {
        //ara yerine input idsi ver
        $("#ara").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            //tablo idsi ver
            $("#table tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });

</script>
<link href="~/Content/Styles/dist/css/MyWorksCss.css" rel="stylesheet" />