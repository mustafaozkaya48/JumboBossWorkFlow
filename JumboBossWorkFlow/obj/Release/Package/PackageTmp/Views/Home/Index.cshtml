@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Jumbo Boss İş Takip</title>
    <!-- Bootstrap core CSS -->

    <link href="~/Content/StartIndex/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/StartIndex/css/creative.css" rel="stylesheet" />

    <link href="~/Content/StartIndex/css/creative.min.css" rel="stylesheet" />
    <!-- Custom fonts for this template -->

    <link href="~/Content/StartIndex/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- Plugin CSS -->


    <link href="~/Content/StartIndex/vendor/magnific-popup/magnific-popup.css" rel="stylesheet" />
    <!-- Custom styles for this template -->

</head>

<body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">JUMBO BOSS</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#page-top">ANA SAYFA </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#about">HAKKINDA ?</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#FEATURES">ÖZELLİKLER</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#contact">İLETİŞİM</a>
                    </li>
                    @if (!Request.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="~/WorkFlow/Account/Register">KAYIT OL</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-success" href="~/WorkFlow/Account/Login">GİRİŞ YAP</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="~/WorkFlow/Panel/Home">PANEL</a>
                        </li>
                        using (Html.BeginForm("LogOff", "WorkFlow/Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                        {
                            @Html.AntiForgeryToken()
                            <li class="nav-item">
                                <a class="btn btn-danger" href="javascript:document.getElementById('logoutForm').submit()">ÇIKIŞ YAP</a>
                            </li>
                        }
                    }



                    </ul>
                </div>
            </div>
        </nav>
        <header class="masthead text-center text-white d-flex">
            <div class="container my-auto">
                <div class="row">
                    <div class="col-lg-10 mx-auto">
                        <h1 class="text-uppercase">
                            <strong>JUMBO BOSS İLE ARTIK İŞ TAKİP DAHA KOLAY</strong>
                        </h1>
                        <hr>
                    </div>
                    <div class="col-lg-8 mx-auto">
                        <p class="text-faded mb-5">Eğitim ve kurulum yok! İş ata, takip et. Bu kadar basit.</p>
                        <a class="btn btn-primary btn-xl js-scroll-trigger" href="~/WorkFlow/Account/Register">Hemen Ücresiz Kullanmaya Başla</a>
                    </div>
                </div>
            </div>
        </header>
        <section class="bg-primary" id="about">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto text-center">
                        <h2 class="section-heading text-white">JUMBO BOSS İŞ TAKİP SİSTEMİ</h2>
                        <hr class="light my-4">
                        <p class="text-faded mb-4">İşlerini sözlü olarak, matbu evrakla yada e-posta ile takip etmekte zorluk mu yaşıyorsun, hangi personelinin ne kadar iş yaptığını öğrenmek , işleri genelde bilgisayar veya telefon üzerinden yürüyen kurumlar için “JUMBO BOSS İŞ TAKİP SİSTEMİ” mükemmel bir çözümdür</p>
                        <a class="btn btn-light btn-xl js-scroll-trigger" href="#FEATURES">DAHA FAZLA</a>
                    </div>
                </div>
            </div>
        </section>
        <section id="FEATURES">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2 class="section-heading">At Your Service</h2>
                        <hr class="my-4">
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto">
                            <i class="fa fa-4x fa-diamond text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Sturdy Templates</h3>
                            <p class="text-muted mb-0">Our templates are updated regularly so they don't break.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto">
                            <i class="fa fa-4x fa-paper-plane text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Ready to Ship</h3>
                            <p class="text-muted mb-0">You can use this theme as is, or you can make changes!</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto">
                            <i class="fa fa-4x fa-newspaper-o text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Up to Date</h3>
                            <p class="text-muted mb-0">We update dependencies to keep things fresh.</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 text-center">
                        <div class="service-box mt-5 mx-auto">
                            <i class="fa fa-4x fa-heart text-primary mb-3 sr-icons"></i>
                            <h3 class="mb-3">Made with Love</h3>
                            <p class="text-muted mb-0">You have to make your websites with love these days!</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-dark text-white">









            <div class="container text-center">





                <section id="contact">
                    <div class="section-content">
                        <h1 class="section-header">Get in <span class="content-header wow fadeIn " data-wow-delay="0.2s" data-wow-duration="2s"> Touch with us</span></h1>
                        <h3>Lorem Ipsum is simply dummy text of the printing and typesetting industry</h3>
                    </div>
                    <div class="contact-section">
                        <div class="container" align="center">
                            <form>
                                <div class="col-md-6 form-line">
                                    <div class="form-group">
                                        <label for="exampleInputUsername">Adınız</label>
                                        <input type="text" class="form-control" id="" placeholder=" Adınızı giriniz">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail">Email Addresiniz</label>
                                        <input type="email" class="form-control" id="exampleInputEmail" placeholder=" Email Adresini Giriniz">
                                    </div>
                                    <div class="form-group">
                                        <label for="telephone">Telefon Numaranız</label>
                                        <input type="tel" class="form-control" id="Telefon Numaranızı Giriniz" placeholder=" Telefon Numaranızı Giriniz">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="description"> Mesaj</label>
                                        <textarea class="form-control" id="description" placeholder="Mesajınız"></textarea>
                                    </div>
                                    <div>
                                        <button type="button" class="btn btn-default submit"><i class="fa fa-paper-plane" aria-hidden="true"></i>  Gönder</button>
                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </section>










            </div>
        </section>
        <section id="contact">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 mx-auto text-center">
                        <h2 class="section-heading">Let's Get In Touch!</h2>
                        <hr class="my-4">
                        <p class="mb-5">Ready to start your next project with us? That's great! Give us a call or send us an email and we will get back to you as soon as possible!</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4 ml-auto text-center">

                    </div>
                    <div class="col-lg-4 mr-auto text-center">
                        <i class="fa fa-envelope-o fa-3x mb-3 sr-contact"></i>
                        <p>
                            <a href="mailto:your-email@your-domain.com">destek@jumboboss.com</a>
                        </p>
                    </div>
                    <div class="col-lg-4 mr-auto text-center">

                    </div>
                </div>
            </div>
        </section>
        <!-- Bootstrap core JavaScript -->


        <script src="~/Content/StartIndex/vendor/jquery/jquery.min.js"></script>

        <script src="~/Content/StartIndex/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Plugin JavaScript -->
        <script src="~/Content/StartIndex/vendor/jquery-easing/jquery.easing.min.js"></script>



        <script src="~/Content/StartIndex/vendor/scrollreveal/scrollreveal.min.js"></script>


        <script src="~/Content/StartIndex/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
        <!-- Custom scripts for this template -->
        <script src="~/Content/Styles/dist/js/creative.min.js"></script>
    </body>

</html>